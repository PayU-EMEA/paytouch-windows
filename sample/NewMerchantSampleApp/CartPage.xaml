                    </Viewbox>

                    <TextBlock Text="odbiór osobisty"
                               Grid.Column="1"
                               Foreground="Black"
                               Margin="0,0,12,0"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Left"
                               FontSize="{StaticResource PhoneFontSizeMedium}"
                               VerticalAlignment="Top" />

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top">

                        <TextBlock Text="0"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   FontSize="{StaticResource PhoneFontSizeMedium}"
                                   VerticalAlignment="Center" />

                        <TextBlock Text="PLN"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   FontSize="{StaticResource PhoneFontSizeMedium}"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center" />

                    </StackPanel>

                </Grid>

            </Grid>

            <Grid x:Name="GridTotalPrive"
                  Margin="0,0,0,24"
                  Grid.Row="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="do zapłaty"
                           Foreground="#FF8D8D8D"
                           FontSize="{StaticResource PhoneFontSizeMediumLarge}"
                           Margin="0,0,0,12" />

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top">

                    <TextBlock x:Name="TextBlockTotalPrice"
                               Foreground="Black"
                               FontWeight="Bold"
                               FontSize="{StaticResource PhoneFontSizeMedium}"
                               VerticalAlignment="Center" />

                    <TextBlock Text="PLN"
                               FontWeight="Bold"
                               Foreground="Black"
                               FontSize="{StaticResource PhoneFontSizeMedium}"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center" />

                </StackPanel>

            </Grid>

            <TextBlock Text="sposób zapłaty"
                       Grid.Row="3"
                       FontSize="{StaticResource PhoneFontSizeMediumLarge}"
                       Margin="0,0,0,12"
                       Foreground="#FF8D8D8D" />

            <controls:PaymentMethodWidget Grid.Row="4"
                                          VerticalAlignment="Top"
                                          Theme="Theme2" />

            <Button x:Name="ButtonPay"
                    Content="płacę"
                    Foreground="Black"
                    BorderBrush="Black"
                    IsEnabled="False"
                    Margin="-12,0,-12,12"
                    VerticalAlignment="Bottom"
                    Grid.Row="4"
                    Click="ButtonBase_OnClick"
                    Style="{StaticResource ButtonStyle1}" />

        </Grid>

        <Grid x:Name="Overlay"
              Grid.RowSpan="2"
              Background="Black"
              Opacity="0.7"
              Visibility="Collapsed">

            <TextBlock Foreground="White"
                       Text="Realizacja płatności..."
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="{StaticResource PhoneFontSizeMediumLarge}"
                       Margin="0,0,0,48" />

            <ProgressBar IsIndeterminate="True"
                         VerticalAlignment="Center" />

        </Grid>

    </Grid>

</animation:AnimatedBasePage>